@inherits LayoutComponentBase

<div class="sidebar">
    <NavMenu />
</div>

<div class="main">
    <div class="top-row px-4">
        <a>
            <NavLink class="nav-link" href="home" Match="NavLinkMatch.All">
                <span class="oi oi-person" aria-hidden="true"></span> My Profile
            </NavLink>
        </a>
        <a>
            <NavLink class="nav-link" href="logout" Match="NavLinkMatch.All">
                <span class="oi oi-account-logout" aria-hidden="true" href="/Logout"></span> Logout
            </NavLink>
        </a>
    </div>

    <div class="content px-4">
        @if (IsDarkMode)
        {
            <DarkTheme>
                @Body
            </DarkTheme>
        }
        else
        {
            <LightTheme>
                @Body
            </LightTheme>
        }
    </div>
</div>

@code {
    private bool isDarkMode;

    private bool IsDarkMode
    {
        get => isDarkMode;
        set
        {
            isDarkMode = value;
            // Update the theme settings or trigger a theme change event here
        }
    }
}
