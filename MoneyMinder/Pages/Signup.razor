@layout LoginLayout
@page "/signup"
@using MoneyMinder.Model

<EditForm Model="@user">
    <div>
        <h2 style="font-weight:bold; color:limegreen">Money Minder Sign Up</h2>
    </div>
    <br />
    <div class="col-12 row">
        <label for="firstname" class="col-1 row">First Name:</label>
        <input type="text" id="firstname" name="firstname" placeholder="First Name" required>
    </div>
    <br />
    <div class="col-12 row">
        <label for="lastname" class="col-1 row">Last Name:</label>
        <input type="text" id="lastname" name="lastname" placeholder="Last Name" required>
    </div>
    <br />
    <div class="col-12 row">
        <label for="email" class="col-1 row">Email:</label>
        <input type="email" id="email" name="email" placeholder="myemail@outlook.com" required>
    </div>
    <br />
    <div class="col-12 row">
        <label for="pass" class="col-1 row">Password:</label>
        <input type="password" id="pass" name="pass" required>
    </div>
    <br />
    <div class="col-12 row">
        <label for="passConfirm" class="col-1 row">Confirm Password:</label>
        <input type="password" id="passConfirm" name="passConfirm" required>
    </div>
    <br />
    <div class="col-12 row">
        <span class="col-12"></span>
        <input type="submit" class="form-control col-6 btn btn-primary" value="Sign Up" />
        <a href="/home" class="col-3">Temporary Home Button</a>
    </div>
</EditForm>

@code {
    User user = new User();

}
