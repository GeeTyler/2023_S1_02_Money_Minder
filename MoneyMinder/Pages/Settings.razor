@page "/settings"
@layout MainLayout

@using Microsoft.AspNetCore.Components.Web

<h3>Settings</h3>

<div>
    <label for="themeSelect">Select Theme:</label>
    <select id="themeSelect" @onchange="ChangeTheme">
        <option value="light">Light</option>
        <option value="dark">Dark</option>
    </select>
</div>

<div>
    <label for="fontSizeSelect">Select Font Size:</label>
    <select id="fontSizeSelect" @onchange="ChangeFontSize">
        <option value="small">Small</option>
        <option value="medium">Medium</option>
        <option value="large">Large</option>
    </select>
</div>

@code {
    private string selectedTheme = "light";
    private string selectedFontSize = "medium";

    private void ChangeTheme(ChangeEventArgs e)
    {
        selectedTheme = e.Value.ToString();
        // Update the theme in ThemeManager or call a method to handle the theme change
        // ThemeManager.SetTheme(selectedTheme);
    }

    private void ChangeFontSize(ChangeEventArgs e)
    {
        selectedFontSize = e.Value.ToString();
        // Update the font size in ThemeManager or call a method to handle the font size change
        // ThemeManager.SetFontSize(selectedFontSize);
    }
}
